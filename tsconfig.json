{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2017",
      "es2019",
      "dom"
    ],
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "express"
  ]
}